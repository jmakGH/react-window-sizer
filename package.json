{
  "name": "react-window-sizer",
  "version": "1.0.0",
  "description": "React HOC that passes the browser dimensions to another component",
  "author": "Justin Mak <j.mak.dev@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/jmakGH/react-window-sizer",
  "bugs": "https://github.com/jmakGH/react-window-sizer/issues",
  "keywords": [
    "react",
    "react-component",
    "hoc",
    "window",
    "size"
  ],
  "main": "dist/index.js",
  "scripts": {
    "prepublish": "npm run build",
    "build": "webpack",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --coverage --watch"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.1.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "eslint": "^4.17.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.1",
    "jest": "^22.1.4",
    "react-dom": "^16.2.0",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "prop-types": "^15.6.0",
    "react": "^16.2.0"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/tests/coverage",
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/src"
    ],
    "roots": [
      "<rootDir>/tests"
    ],
    "setupFiles": [
      "<rootDir>/tests/configJest.js"
    ],
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ]
  }
}
